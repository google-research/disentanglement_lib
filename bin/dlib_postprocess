"""Script to run the postprocessing step which extracts the representation."""
from __future__ import absolute_import
from __future__ import division
from __future__ import print_function

from absl import app
from absl import flags
from disentanglement_lib.postprocessing import postprocess

FLAGS = flags.FLAGS
flags.DEFINE_string("model_dir", None, "Directory to take trained model from.")
flags.DEFINE_string("output_dir", None,
                    "Directory to save extracted representation to.")
flags.DEFINE_multi_string("gin_config", [],
                          "List of paths to the config files.")
flags.DEFINE_multi_string("gin_bindings", [],
                          "Newline separated list of Gin parameter bindings.")
flags.DEFINE_boolean("overwrite", False,
                     "Whether to overwrite output directory.")


def main(unused_argv):
  postprocess.postprocess_with_gin(FLAGS.model_dir, FLAGS.output_dir,
                                   FLAGS.overwrite, FLAGS.gin_config,
                                   FLAGS.gin_bindings)


if __name__ == "__main__":
  app.run(main)
